<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CourierLogin">

    <TextView
        android:id="@+id/header_courier"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="75dp"
        android:gravity="top"
        android:text="@string/courier_log"
        android:textAppearance="@style/courier_log" />

    <EditText
        android:id="@+id/field_courierVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="222dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/button_courierSubmit"
        style="@style/button_blue"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="322dp"
        android:text="@string/courier_log" />
    <Button
        android:id="@+id/button_backResident"
        style="@style/button_blue"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="683dp"
        android:text="@string/button_back" />

</RelativeLayout>